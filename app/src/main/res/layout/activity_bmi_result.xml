<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
    <LinearLayout
        android:id="@+id/linear_bmi_result1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:padding="20dp"
            android:id="@+id/txtResultBMR"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="0 ccal"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtHasilAnda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Hasil BMI Anda :"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtResultBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="80sp"
            android:textColor="#e74c3c"/>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Deskripsi"
            android:maxLines="10"
            android:textAlignment="center"
            android:background="@drawable/table_bmi"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnKalori_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_gravity="center_horizontal"
            android:text="HITUNG KALORI"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@drawable/button_bmi"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#dbdbdb" />

        <TextView
            android:id="@+id/txtTabelBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tabel BMI"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TableLayout
            android:id="@+id/tabelBMI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_span="2"
                    android:padding="3dp"
                    android:text="Underweight"
                    android:layout_weight="1"
                    android:background="@drawable/table_bmi"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="Below 18.5"
                    android:background="@drawable/table_bmi"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_span="2"
                    android:padding="3dp"
                    android:text="Normal"
                    android:background="@drawable/table_bmi"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="18.5  -  24.9"
                    android:background="@drawable/table_bmi"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_span="2"
                    android:padding="3dp"
                    android:text="Overweight"
                    android:background="@drawable/table_bmi"/>

                <TextView
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="25.0  -  30.0"
                    android:background="@drawable/table_bmi"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_span="2"
                    android:padding="3dp"
                    android:text="Obesity"
                    android:background="@drawable/table_bmi"/>

                <TextView
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="Above 30.0"
                    android:background="@drawable/table_bmi"/>
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#dbdbdb" />

        <TextView
            android:id="@+id/txtTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips Sehat"
            android:textAlignment="center"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e74c3c"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/txtTips1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Tips Menambah Berat badan"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtTips2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Tips Menjaga Berat Badan"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtTips3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Macam-macam Diet"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtTips4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Mencegah Diabetes"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtTipsSelengkapnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Selengkapnya, lihat disini >"
            android:textSize="20sp"
            android:textColor="#e74c3c"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:layout_marginTop="30dp"
            android:background="#fff" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>